{
    "$schema": "<relative path to dx.schema.json>",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "AVD Solution Accelerator",
            "steps": [
                {
                    "name": "Hostpool",
                    "label": "Hostpool",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            }
                        },
                        {
                            "name": "hostPoolName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Host Pool Name",
                            "defaultValue": "",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "hostPoolType",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Host Pool Type",
                            "defaultValue": "Pooled",
                            "toolTip": "",
                            "constraints": {
                                "required": true,
                                "allowedValues": [
                                    {
                                        "label": "Pooled",
                                        "value": "Pooled"
                                    },
                                    {
                                        "label": "Personal",
                                        "value": "Personal"
                                    }
                                ]
                            },
                            "visible": true
                        },
                        {
                            "name": "loadBalancer",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Load Balancer",
                            "defaultValue": "DepthFirst",
                            "toolTip": "Breadth-first load balancing distributes new user sessions across all available session hosts in the host pool. Depth-first load balancing distributes new user sessions to an available session host with the highest number of connections but has not reached its maximum session limit threshold.",
                            "constraints": {
                                "required": true,
                                "allowedValues": [
                                    {
                                        "label": "BreadthFirst",
                                        "value": "BreadthFirst"
                                    },
                                    {
                                        "label": "DepthFirst",
                                        "value": "DepthFirst"
                                    }
                                ]
                            },
                            "visible": "[equals(steps('Hostpool').hostPoolType, 'Pooled')]"
                        },
                        {
                            "name": "maxSessions",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Max Sessions",
                            "defaultValue": "4",
                            "toolTip": "The maximum number of users that have concurrent sessions on a session host. When setting a host pool to have depth first load balancing or planning to use Autoscaling, you must set an appropriate max session limit according to the configuration of your deployment and capacity of your VMs.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": "[equals(steps('Hostpool').hostPoolType, 'Pooled')]"
                        },                        
                        {
                            "name": "startVmOnConnect",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Start Vm On Connect",
                            "defaultValue": "true",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "allowedValues": [
                                    {
                                        "label": "true",
                                        "value": true
                                    },
                                    {
                                        "label": "false",
                                        "value": false
                                    }
                                ]
                            },
                            "visible": true
                        },
                        {
                            "name": "location",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Location",
                            "defaultValue": "[[resourceGroup().location]",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": false
                        },
                        {
                            "name": "time",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Time",
                            "defaultValue": "[[utcNow()]",
                            "toolTip": "",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": false
                        }
                    ]
                }
            ],
            "deployment": {
                "parameters": {
                    "hostPoolName": "[steps('Hostpool').hostPoolName]",
                    "hostPoolType": "[steps('Hostpool').hostPoolType]",
                    "loadBalancer": "[steps('Hostpool').loadBalancer]",
                    "startVmOnConnect": "[steps('Hostpool').startVmOnConnect]",
                    "location": "[steps('Hostpool').location]",
                    "time": "[steps('Hostpool').time]"
                },
                "kind": "ResourceGroup",
                "location": "[steps('Hostpool').resourceScope.location.name]",
                "resourceGroupId": "[steps('Hostpool').resourceScope.resourceGroup.id]",
                "template": {
                    "file": "<ARM deployment template relative path>"
                }
            }
        }
    }
}